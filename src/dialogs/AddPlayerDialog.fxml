<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="14.0" layoutY="25.0" text="Voeg een nieuwe speler toe" />
 
        <TilePane alignment="CENTER_LEFT" layoutX="14.0" layoutY="40.0" prefColumns="2" prefHeight="120.0" prefRows="3" prefTileWidth="60.0" prefWidth="170.0" tileAlignment="CENTER_LEFT">
            <children>
                <Label text="Naam: " />
                <TextField fx:id="nameField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="100.0" />
                <Label alignment="BOTTOM_LEFT" text="Pion:" />
                <ComboBox fx:id="tokenBox" minWidth="-Infinity" prefHeight="30.0" prefWidth="100.0" />
                <Label text="Kleur:" />
                <ColorPicker fx:id="colorPicker" minWidth="-Infinity" prefHeight="30.0" prefWidth="100.0" />
            </children>
        </TilePane>  
        <Button fx:id="addPlayerButton" layoutX="90.0" layoutY="161.0" mnemonicParsing="false" text="Voeg speler toe" />
    </children>
</AnchorPane>
